{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "node": true
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "import/no-unresolved": 1,
    "global-require": 0,
    "prefer-template": 1,
    "max-len": [
      "error",
      120
    ],
    "new-cap": 0,
    "react/prefer-stateless-function": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-nested-ternary": 1,
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": 0
  }
}
